<!--
  MainWindow.xaml
  RTULogScope – main UI layout for CSV data visualization from Modbus RTU log files.
-->

<Window x:Class="RTULogScope.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:vm="clr-namespace:RTULogScope.ViewModels"
        Title="RTULogScope"
        Height="700"
        Width="1100"
        WindowStartupLocation="CenterScreen"
        Icon="/RTULogScope.ico"
        Cursor="Cross">

    <!-- Bind the ViewModel directly -->
    <Window.DataContext>
        <vm:GraphViewModel/>
    </Window.DataContext>

    <DockPanel>

        <!-- 🔝 Top command panel -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="10" HorizontalAlignment="Stretch">

            <!-- CSV load and PNG export -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Content="📂 Load CSV..."
                        Click="LoadCsv_Click"
                        Margin="0,0,10,0"
                        Padding="10,4"
                        Background="#007ACC"
                        Foreground="White"
                        BorderBrush="#005A9E"
                        FontWeight="Bold"/>

                <Button Content="💾 Export PNG"
                        Click="ExportToPng_Click"
                        Padding="10,4"
                        Background="#43A047"
                        Foreground="White"
                        BorderBrush="#388E3C"
                        FontWeight="Bold"/>
            </StackPanel>

            <!-- 👁️ Show/hide statistics toggle -->
            <ToggleButton x:Name="ToggleStats"
                          IsChecked="True"
                          ToolTip="Toggle visibility of statistics panel"
                          Width="30" Height="30"
                          FontSize="16"
                          Padding="0"
                          Margin="10,0,0,0"
                          VerticalAlignment="Center">
                <TextBlock Text="{Binding IsChecked, ElementName=ToggleStats, Converter={StaticResource EyeIconConverter}}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </ToggleButton>
        </StackPanel>

        <!-- 🧱 Main layout: left = measurements, right = graph + stats -->
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 📋 Measurement selector -->
            <Border Grid.Column="0"
                    Background="#F3F3F3"
                    Padding="10"
                    CornerRadius="5"
                    BorderBrush="#DDD"
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Measurements"
                               FontWeight="Bold"
                               FontSize="14"
                               Margin="0,0,0,8"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Height="500">
                        <ItemsControl ItemsSource="{Binding Measurements}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding Value}"
                                              IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                              Margin="0,4"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </Border>

            <!-- 📈 Plot + 📊 Statistics -->
            <Border Grid.Column="1"
                    Margin="10,0,0,0"
                    BorderBrush="#DDD"
                    BorderThickness="1"
                    CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- 📈 PlotView chart -->
                    <oxy:PlotView Model="{Binding PlotModel}" Grid.Row="0" />

                    <!-- 📊 Statistics section -->
                    <Border Grid.Row="1"
                            Margin="10"
                            Padding="8"
                            Background="#FAFAFA"
                            BorderBrush="#CCCCCC"
                            BorderThickness="1"
                            CornerRadius="4"
                            Visibility="{Binding IsChecked, ElementName=ToggleStats, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel>
                            <TextBlock Text="📊 Statistics"
                                       FontWeight="Bold"
                                       FontSize="14"
                                       Margin="0,0,0,6"
                                       Foreground="#37474F"/>
                            <TextBlock Text="{Binding StatsSummary}"
                                       FontFamily="Consolas"
                                       FontSize="12"
                                       Foreground="#455A64"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </DockPanel>
</Window>
